
<%= form_tag books_path, :method => 'get', :id => "books_search", :class => "form-search" do %>
 <div class="input-append">
    <%= text_field_tag :search, params[:search], :class => 'span2 search-query', :placeholder => "Search Book" %>
    <%= submit_tag "Search", :name => nil, :class => "btn btn-success" %>
  </div>
  <div id="books"><%= render 'books' %></div>
<% end %>
<%= link_to 'New Book', new_book_path %>
